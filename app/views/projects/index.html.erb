<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<div class="flex flex-wrap items-start justify-start">
  <% @projects.each do |project| %>
  <div class="relative w-full p-6 mb-6 border-2 border-blue-700 rounded lg:w-1/4 lg:mr-8">
    <%= image_tag project.thumbnail, class:"rounded h-auto mb-4 w-full max-w-full" if project.thumbnail.present? %>
    <h2 class="mb-2 text-2xl font-b"><%= project.title %></h2>
    <div class="my-1"><%= truncate(strip_tags(project.description.to_s), length: 140 ) %></div>
    <p><%= project.donation_goal %></p>
    <%= link_to 'View Project', project, class: "btn btn-default inline-block text-center my-2"%>
    <% if author_of(project) %>
    <div class="absolute top-0 right-0 mt-2 mr-2">
      <%= link_to edit_project_path(project) do%>
      <svg class="w-6 h-6 text-white opacity-75 fill-current" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
        viewBox="0 0 24 24">
        <title>edit</title>
        <path
          d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z">
        </path>
      </svg>
      <% end %>
    </div>
    <% end %>
  </div>
  <% end %>
</div>

<%= link_to 'New Project', new_project_path %>